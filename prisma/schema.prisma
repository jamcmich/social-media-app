// learn more about it in the docs: https://pris.ly/d/prisma-schema

// NOTE: Run 'prisma db push || npm run prisma-push' to sync schema and db every time this file is updated

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id
  email     String?  @unique
  firstName String?
  lastName  String?
  phone     String?
  img       String?
  username  String?
  address   Address?
  role      Role?    @default(USER)
}

model Address {
  street  String?
  city    String?
  zipCode String?
  user    User?   @relation(fields: [userId], references: [id])
  userId  String  @unique
}

enum Role {
  ADMIN
  USER
}
